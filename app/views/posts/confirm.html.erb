<article class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
  <div>
    <a class="article_home" href="/posts">ホーム</a>
  </div>
  <div class="article_form">
  <%= form_with(model: @post, local: true) do |form| %>
    <ul  style="height: 210px;"class="blog_content t_box">
      <li>確認画面</li>
      <%= form.hidden_field :content %>
      <li><%= @post.content %></li>
      <li class="confirm_li">
        <%= form.submit "ヅイート！！" %>
        <%= form.submit "戻る", name: 'back' %>
      </li>
    </ul>
  <% end %>
  </div>
  <div class="article_footer">
    <h3>呟き一覧表示</h3>
    <p><%= notice %></p>
    <table>
    <% @posts.each do |posts| %>
      <tr>
        <td><%= posts.content %></td>
        <td><%=link_to image_tag("gomi.jpeg", width: "30"), post_path(posts[:id]) ,method: :delete, data: {confirm: "本当に消します？"}%></td>
      </tr>
    <% end %>d
    </table>
  </div>
</article>
